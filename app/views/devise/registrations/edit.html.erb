<%= render "shared/header" %>

<div class="user-edit-main">
  <h2 class="form-header"><%= @user.name %>さんのユーザー情報変更</h2>
  <%= form_with model: @user, class: "registration-main", url: user_registration_path, method: :put, local: true  do |f| %>
    <%= render "shared/error_messages", model: f.object %>

    
    <div class="field">
      <div class="field-name">名前(もしくは団体名) ※最大30文字</div>
      <%= f.text_field 'name', class: 'input-field', placeholder:"例) 予約太郎, イベント予約協会 など", maxlength:"30" %>
      <div class="word-count">現在の文字数：<span id="word-count"></span></div>
    </div>

    
    <div class="field">
      <div class="field-name">電話番号(ハイフンなし)</div>
      <%= f.telephone_field 'tel', class: 'input-field',placeholder:"例)09012345678", maxlength:"11" %>
    </div>

    
    <div class="field">
      <div class="field-name">Email</div>
      <%= f.email_field 'email', class: 'input-field',placeholder:"PC・携帯どちらでも可" %>
    </div>

    
    <div class="field">
      <div class="field-name">コメント(任意) ※200文字まで</div>
      <%= f.text_area 'comment', class: 'text-field', id:'comment', placeholder:"どんな事業や活動をしているか、記入してください", maxlength:"200" %>
      <div class="word-count">現在の文字数：<span id="word-count"></span></div>
    </div>

    
    <div class="field">
      <div class="field-name">現在のパスワード</div>
      <%= f.password_field 'current_password', class: 'input-field',placeholder:"半角英数字混合8文字以上" %>
    </div>

    
    <div class="field">
      <div class="field-name">新しく変更するパスワード</div>
      <%= f.password_field 'password', class: 'input-field',placeholder:"半角英数字混合8文字以上" %>
    </div>

    
    <div class="field">
      <div class="field-name">新しく変更するパスワード(確認)</div>
      <%= f.password_field 'password_confirmation', class: 'input-field', placeholder:"同じパスワードを入力してください" %>
    </div>

    <%= f.submit "更新", class:"actions" %>
  <% end %>

  <%= link_to '戻る', root_path, class:"return" %>
</div>
