<%= render "shared/header" %>



<%= form_with model: @user, url: user_registration_path, method: :post, class: 'registration-main', local: true  do |f| %>
<h2 class="form-header">会員登録</h2>
  <%= render "shared/error_messages", model: f.object %>

  
  <div class="field">
    <div class="field-name">名前(もしくは団体名) ※最大30文字</div>
    <%= f.text_field 'name', class: 'input-field', placeholder:"例) 予約太郎, イベント予約協会 など", maxlength:"30" %>
  </div>

  
  <div class="field">
    <div class="field-name">電話番号</div>
    <%= f.telephone_field 'tel', class: 'input-field', placeholder:"例)09012345678", maxlength:"11" %>
  </div>

  
  <div class="field">
    <div class="field-name">Email</div>
    <%= f.email_field 'email', class: 'input-field', placeholder:"PC・携帯どちらでも可" %>
  </div>

  
  <div class="field">
    <div class="field-name">コメント(任意) ※200文字まで</div>
    <%= f.text_area 'comment', class: 'text-field', placeholder:"どんな事業や活動をしているか、記入してください" %>
  </div>

  
  <div class="field">
    <div class="field-name">パスワード</div>
    <%= f.password_field 'password', class: 'input-field', placeholder:"半角英数字混合8文字以上" %>
  </div>
  
  <div class="field">
    <div class="field-name">パスワード(確認)</div>
    <%= f.password_field 'password_confirmation', class: 'input-field', placeholder:"同じパスワードを入力してください" %>
  </div>


    <%= f.submit "会員登録", class: 'actions' %>
    <%= link_to '戻る', root_path, class: 'return' %>
<% end %>