<h2><%= @user.name %>さんのユーザー情報変更</h2>

<%= form_with model: @user, url: user_registration_path, method: :put, local: true  do |f| %>
  <%= render "shared/error_messages", model: f.object %>

  名前(もしくは団体名) ※最大30文字
  <div class="field">
    <%= f.text_field 'name', placeholder:"例) 予約太郎, イベント予約協会 など", maxlength:"30" %>
  </div>

  電話番号
  <div class="field">
    <%= f.telephone_field 'tel', placeholder:"例)09012345678", maxlength:"11" %>
  </div>

  Email
  <div class="field">
    <%= f.email_field 'email', placeholder:"PC・携帯どちらでも可" %>
  </div>

  コメント(任意) ※200文字まで
  <div class="field">
    <%= f.text_field 'comment', placeholder:"どんな事業や活動をしているか、記入してください" %>
  </div>

  現在のパスワード
  <div class="field">
    <%= f.password_field 'current_password', placeholder:"半角英数字混合8文字以上" %>
  </div>

  新しく変更するパスワード
  <div class="field">
    <%= f.password_field 'password', placeholder:"半角英数字混合8文字以上" %>
  </div>

  新しく変更するパスワード(確認)
  <div class="field">
    <%= f.password_field 'password_confirmation', placeholder:"同じパスワードを入力してください" %>
  </div>



  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<%= link_to '戻る', root_path %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
