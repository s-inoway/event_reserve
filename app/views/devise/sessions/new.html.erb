<%= render "shared/header" %>



<%= form_with model: @user, url: user_session_path, method: :post, class: 'session-main', local: true do |f| %>
<h2 class="form-header">ログイン</h2>
  <%= render "shared/error_messages", model: f.object %>

  
  <div class="field">
    <div class="field-name">Email</div>
    <%= f.email_field 'email', class: 'input-field', placeholder:"PC・携帯どちらでも可" %>
  </div>


  <div class="field">
    <div class="field-name">パスワード</div>
    <%= f.password_field 'password', class: 'input-field', placeholder:"半角英数字混合8文字以上" %>
  </div>

  <%= f.submit "ログイン", class: 'actions' %>
  <%= link_to '戻る', root_path, class: 'return' %>

<% end %>

